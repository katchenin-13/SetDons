            ajaxUrl: "{{ path('app_gestion_audience_index') }}",
            language: {
                url: asset_base_path + "/js/i18n/French.json"
            }
        });
     });
     
          $('#audience_communaute').on('change', (e) => {
          e.preventDefault();
        let value = $('#audience_communaute').val();
        let state = $('#audience_communaute').val();
        console.log("window.location.pathname");
        console.log(window.location.pathname);
        window.location.href =
