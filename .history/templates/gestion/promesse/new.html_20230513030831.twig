{% from '_macros/ligne_entree.html.twig' import  fieldon %}
{% block page_content %}
    {% form_theme form 'widget/fields-block.html.twig' %}
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cr√©ation Promesse</h5>
        <div class="btn btn-icon btn-sm  ms-2" data-bs-dismiss="modal" aria-label="Close">
            <span class="svg-icon svg-icon-2x text-white">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor"></rect>
					<rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor"></rect>
				</svg>
            </span>
        </div>
    </div>
    {{ form_start(form, {'attr': {'role':'form', 'class': 'form'}}) }}
    <div class="modal-body">
          <div id="list-ligne" data-prototype="{{ fieldon(form.fieldon.vars.prototype, 1)|e }}"></div>
        {{ include('_includes/ajax/response.html.twig') }}
         <div class="card card-flush shadow-sm">
                <div class="card-header">
                    <h3 class="card-title">Informations sur le (s) beneficiaire (s)</h3>
                </div>
                <hr class="separateur">
                <div class="card-body py-5">
                       <div class="row doc-container2">
                             <div class="form-group col-md-3">{{ form_row(form.communaute) }}</div>
                            <div class="form-group col-md-3">{{ form_row(form.nom) }}</div>
                            <div class="form-group col-md-3">{{ form_row(form.numero) }}</div>
                            <div class="form-group col-md-3">{{ form_row(form.email) }}</div>
                      </div>   
                </div>
                
            </div>
            <br>
            <div class="card card-flush shadow-sm">
                <div class="card-header">
                   <h3 class="card-title">Informations sur le (s) promesse (s)</h3>
                </div>
               
                <br>
                <hr class="separateur">
                <div class="card-body py-5">
                       <div class="row doc-container23">
                            <div class="col-md-5">{{ form_row(form.dateremise) }}</div>
                            {# <div class="col-md-5">{{ form_row(form.remispar,{'attr':{'class':'remise'}}) }}</div> #}
                            {# <div class="col-md-2">{{ form_row(form.promesse,{'attr':{'class':'promesse'}}) }} </div> #}
                      </div>   
                </div>
                
            </div>
    </div>
    <div class="modal-footer">
        {# {{ include('_includes/ajax/loader.html.twig') }} #}
        <button type="button" class="btn btn-default btn-sm" data-bs-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-main btn-ajax btn-sm"><span class="spinner-border d-none  spinner-ajax spinner-border-sm" role="status" aria-hidden="true"></span> Valider</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block java %}
    <script>
        $(function () {
            init_select2('select');
        });
       
    </script>
{% endblock %}