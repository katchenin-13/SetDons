

{% from '_macros/ligne_entree.html.twig' import  nompf %}
{% from '_macros/ligne_entree.html.twig' import  numeropf %}
{% from '_macros/ligne_entree.html.twig' import  emailpf %}
{% block page_content %}
    {% form_theme form 'widget/fields-block.html.twig' %}
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Création Communaute</h5>
        <div class="btn btn-icon btn-sm  ms-2" data-bs-dismiss="modal" aria-label="Close">
            <span class="svg-icon svg-icon-2x text-white">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor"></rect>
					<rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor"></rect>
				</svg>
            </span>
        </div>
    </div>
    {{ form_start(form, {'attr': {'role':'form', 'class': 'form'}}) }}
    <div class="modal-body">
                <div id="list-ligne1" data-prototype="{{ nompf(form.nompfs.vars.prototype, 1)|e }}"></div>
                <div id="list-ligne2" data-prototype="{{ numeropf(form.numeropfs.vars.prototype, 1)|e }}"></div>
                <div id="list-ligne3" data-prototype="{{ emailpf(form.emailpfs.vars.prototype, 1)|e }}"></div>
                
            
                {{ include('_includes/ajax/response.html.twig') }}
                {# {{ form_widget(form) }} #}
                {# <div class ="rouge" >  
                Information sur la communauté
                </div> #}
        
                <div class="row">
                    <div class="col-md-4">{{ form_row(form.code) }}</div>
                    <div class="col-md-4">{{ form_row(form.libelle) }}</div>
                    <div class="col-md-4">{{ form_row(form.categorie) }}</div>
                    <div class="col-md-8">{{ form_row(form.localite) }}</div>
                    <div class="col-md-4">{{ form_row(form.nbestmember) }}</div>
                </div>

                <br>
                <div class="card card-flush shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title">Ajout des mons</h3>
                        <div class="card-toolbar">
                            <button type="button" data-origine="1" class="btn btn-sm btn-primary add-ligne1 btn-xs" data-container=".doc-container2">
                                <i class="fa fa-plus"></i>Ajouter
                            </button>
                        </div>
                    </div>
                    <hr class="separateur">
                    <div class="card-body py-5">
                        <div class="row">
                            <div class="form-group col-md-11">Nom point focal</div>
                      
                            <div class="form-group col-md-1 del-col">
        
                            </div>
                        </div>
                        <div class="doc-container1">
                            {% for ligne in form.nompfs %}
                                {{ nompf(ligne|e) }}
                            {% endfor %}
                        </div>
                    </div>
                    {#<div class="card-footer">
                        Footer
                    </div>#}
                </div>
                <br>

                <br>
                <div class="card card-flush shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title">Ajout de numéros point facal du menu</h3>
                        <div class="card-toolbar">
                            <button type="button" data-origine="1" class="btn btn-sm btn-primary add-ligne2 btn-xs" data-container=".doc-container2">
                                <i class="fa fa-plus"></i>Ajouter
                            </button>
                        </div>
                    </div>
                    <hr class="separateur">
                    <div class="card-body py-5">
                        <div class="row">
                            <div class="form-group col-md-11">Numéro</div>
                            
                            <div class="form-group col-md-1 del-col">
        
                            </div>
                        </div>
                        <div class="doc-container2">
                            {% for ligne in form.numeropfs %}
                                {{ numeropf(ligne|e) }}
                            {% endfor %}
                        </div>
                    </div>
                    {#<div class="card-footer">
                        Footer
                    </div>#}
                </div>
                <br>
                <br>
                <div class="card card-flush shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title">Ajout d'adresses mail</h3>
                        <div class="card-toolbar">
                            <button type="button" data-origine="1" class="btn btn-sm btn-primary add-ligne3 btn-xs" data-container=".doc-container3">
                                <i class="fa fa-plus"></i>Ajouter
                            </button>
                        </div>
                    </div>
                    <hr class="separateur">
                    <div class="card-body py-5">
                        <div class="row">
                            <div class="form-group col-md-11">Module</div>

                            <div class="form-group col-md-1 del-col">
        
                            </div>
                        </div>
                        <div class="doc-container3">
                            {% for ligne in form.emailpfs %}
                                {{ emailpf(ligne|e) }}
                            {% endfor %}
                        </div>
                    </div>
                    {#<div class="card-footer">
                        Footer
                    </div>#}
                </div>
                <br>

               
    </div>
    <div class="modal-footer">
        {# {{ include('_includes/ajax/loader.html.twig') }} #}
        <button type="button" class="btn btn-default btn-sm" data-bs-dismiss="modal">Annuler</button>
        <button type="submit" class="btn btn-main btn-ajax btn-sm"><span class="spinner-border d-none  spinner-ajax spinner-border-sm" role="status" aria-hidden="true"></span> Valider</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

