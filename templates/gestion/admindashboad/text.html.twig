{% block body %}
   <div class="row">
     <div class="col-md-12 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">CHIFFRE D'AFFAIRE ANNUEL</h4>
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="fa fa-window-minimize icon-minus"></i></a></li>
                                <li><a data-action="expand"><i class="fa fa-window-maximize "></i></a></li>
                                <li><a data-action="close"><i class="fa fa-close "></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content collapse show">
                        <div class="card-body">
                            <div class="height-400"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                                <canvas id="simple-doughnut-chart_annee" width="697" height="500" class="chartjs-render-monitor" style="display: block; height: 400px; width: 558px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
   </div>

{% endblock %}


